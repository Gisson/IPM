              showfList();
          }
          
          
          function getName(){
              var names=["Joao","Maria","Soraia","Joana","Marta","Nuno"];
              return names[Math.ceil(Math.random()*5)];
          }
          
          function friendAction(id){
              if(currentF==="gRemove"){
                  
                  confirmRemove(id);
              }
              
              if(currentF==="gMute"){
                  confirmMute(id);
              }
              if(currentF==="gTalk"){
                  chooseMensage();
              }
              if(currentF==="gFind"){
                showInMap(id);
              }
          }
          
          function confirmRemove(id){
              erase();
